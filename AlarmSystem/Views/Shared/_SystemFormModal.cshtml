@using AlarmSystem.Models
@model SystemFormModel

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if (Model.ID.HasValue)
                {
                    <h5 class="modal-title" id="exampleModalLabel">
                        Edycja systemu
                    </h5>

                }
                else
                {
                    <h5 class="modal-title" id="exampleModalLabel">
                        Dodawanie systemu
                    </h5>
                }
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("SystemForm", "AdminPanel", FormMethod.Post))
            {
                <div class="modal-body">

                    @Html.HiddenFor(model => model.ID)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ObjectID)
                        @Html.DropDownListFor(m => m.ObjectID, new SelectList(Model.AlarmObjects, "ID", "ObjectName"), new { @class = "form-control" })
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            }
        </div>
    </div>
</div>